<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel="icon" href="/public/favicon.ico" sizes="70x70" type="image/ico">
    <link rel="stylesheet" type="text/css" href="/public/css/page.css">
    <script defer src="/public/js/frontendjs.js"></script>
  </head>
  <body>
    <div id="page-container">
      {{log this}}
      {{> header}}
      {{#if (emptyObject messages)}}
      {{> flashmessage}}
      {{/if}}
      {{{body}}}
      {{> footer}}
    </div>

    {{#if logged}}
      <script>
        let element = document.getElementById('logout-button');
        if (element) {
          element.onclick = (even) => {
            fetch('/users/logout', {
              method:"POST"
            })
            .then((data) => {
              location.replace('/');
            })
          }
        }
      </script>
    {{else}}
    {{/if}}
  </body>
</html>
